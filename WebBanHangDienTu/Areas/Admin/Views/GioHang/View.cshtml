@model WebBanHangDienTu.Models.Data.DonHang
@using PagedList;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
}

@section navheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/GioHang" class="nav-link">Đơn hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết đơn hàng</a>
        </li>


    </ul>
}



<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class=" col-md-6">
                    <div class="form-group">
                        <label>Mã đơn hàng</label>
                        <p class="form-control">@Model.MaCodeDH</p>

                    </div>
                </div>
                <div class=" col-md-6">
                    <div class="form-group">
                        <label>Họ tên khách hàng</label>
                        <p class="form-control">@Model.TenKH</p>

                    </div>
                </div>
            </div>
        
            <div class="row">
                <div class=" col-md-6">
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <p class="form-control">@WebBanHangDienTu.Common.Common.FormatNumber(Model.TongDH, 0) đ</p>

                    </div>
                </div>
                <div class=" col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <p class="form-control">@Model.SDT</p>

                    </div>
                </div>
            </div>
       
            <div class="row">
                <div class=" col-md-6">
                    <div class="form-group">
                        <label>Ngày đặt</label>
                        <p class="form-control">@Model.NgayTao.ToString("dd/MM/yyyy")</p>

                    </div>
                </div>
                <div class=" col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>

                    </div>
                </div>
            </div>
        
            <div class="row">
                <div class=" col-md-6">
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <p class="form-control">@(Model.TypePayment==1?"Chưa thanh toán": "Đã thanh toán")</p>

                    </div>
                </div>
                <div class=" col-md-6">

                </div>
            </div>
        
            <div class="row">

                <div class="col-12">
                    <h2>Danh sách sản phẩm</h2>
                </div>
                <div class="col-12">
                    @Html.Action("Partial_SP", "GioHang", new { id = Model.Id })
                </div>
            </div>
        </div>


        <div class="card-footer">
                <div>
                    <a href="/Admin/GioHang" class="btn btn-danger">Quay lại</a>
                </div>


        </div>
    </div><!-- /.container-fluid -->
</section>

