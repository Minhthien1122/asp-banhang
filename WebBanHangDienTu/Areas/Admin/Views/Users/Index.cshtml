@model List<WebBanHangDienTu.Identity.AppUser>
@{
    ViewBag.Title = "Danh sách người dùng";
}

@section navheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Users" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Tai khoản</h3>
            @*<div class="card-tools">
                <a href="/Admin/Users/Them" class="btn btn-success">Thêm mới</a>
            </div>*@
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>UserName</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>City</th>
                        <th>Ngày sinh</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.UserName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.City</td>
                                <td>@item.NgaySinh</td>
                                @*<td class="">
                                    <a href="/Admin/Users/Sua/@item.UserName" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-user="@item.UserName" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>*@
                            </tr>
                            i++;
                        }


                    }

                </tbody>

            </table>
        </div>
        <div class="card-footer">

        </div>
    </div>


</section>