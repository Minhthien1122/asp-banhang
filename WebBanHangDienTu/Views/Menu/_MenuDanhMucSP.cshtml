@model IEnumerable<WebBanHangDienTu.Models.Data.DanhMucSP>

@if (Model != null && Model.Any())
{
    <div class="banner" id="banner">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-md-4">
                    <div class="banner_item align-items-center" style="background-image:url(@item.Icon)">
                        <div class="banner_category">
                            <a href="/danh-muc-san-pham/@item.BiDanh-@item.Id">@item.TenDanhMuc</a>
                        </div>
                    </div>
                </div>
                    
                }
                
            </div>
        </div>
    </div>

}

