
@{
    ViewBag.Title = "Thanh Toán";
}

<style>
    .error{color:red;}
</style>

<link rel="stylesheet" type="text/css" href="~/Content/Assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/Assets/styles/categories_responsive.css">


<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    <li class="active"><a href="/thanh-toan"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="">Thanh toán</h1>
                    <p>Bạn hãy kiểm tra lại thông tin đơn hàng thật kỹ nhé!!!</p>
                </div>

            </div>
            <hr />
            @if (ViewBag.checkGioHang != null)
            {
                
                <div class="row">
                    <div id="show_success"></div>
                    <div class="col-md-9">
                        @Html.Action("Partial_ThanhToan", "GioHang")

                    </div>
                    <div class="col-md-3">
                        @Html.Action("PartialItemThanhToan", "GioHang")
                    </div>
                </div>
            }
            else
            {
                <div>
                    Bạn chưa có sản phẩm nào.Vui lòng quay lại trang <a href="/san-pham">sản phẩm</a> để mua hàng.
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/Assets/js/categories_custom.js"></script>
    <script>
        function OnFailure(rs) {
            if (!rs.Success) {
                $('#show_success').html("Bạn đã mua hàng thất bại !!! Xin vui lòng thủ lại.");
            }
        }
        
        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    'TenKH': {
                        required: true
                    },
                    'SDT': {
                        required: true
                    },
                    'DiaChi': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email: true
                    }

                },
                messages: {
                    'TenKH': 'Bạn không để trống tên',
                    'SDT': 'Bạn không để trống số điện thoại',
                    'DiaChi': 'Bạn không để trống địa chỉ',
                    'Email': 'Email chưa hợp lệ'
                }
            });
        });
    </script>

}



